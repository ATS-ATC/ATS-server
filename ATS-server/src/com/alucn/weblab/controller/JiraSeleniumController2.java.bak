class GetIssuessInfoThread implements Callable<Map<String, Object>>{
	
	private WebDriver driver;
	private String url;
	
	public GetIssuessInfoThread(WebDriver driver,String url) {
		this.driver = driver;
		this.url = url;
	}
	@Override
	public Map<String, Object> call() throws Exception {
		
		return JiraSelenium.getIssuesInfo(driver,url);
	}
	
